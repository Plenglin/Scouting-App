<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ironpanthers.scouting.android">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:name=".ScoutingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.ScoutingClientActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".view.matchlist.MatchListActivity"
            android:label="@string/title_match_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.matchlist.MatchDetailActivity"
            android:label="@string/title_match_detail"
            android:parentActivityName=".view.matchlist.MatchListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ironpanthers.scouting.android.view.matchlist.MatchListActivity" />
        </activity>
        <activity
            android:name=".view.OpenCompetitionActivity"
            android:label="@string/title_activity_open_match" />
        <activity
            android:name=".view.CreateCompetitionActivity"
            android:label="@string/title_activity_create_match"
            android:parentActivityName=".view.OpenCompetitionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ironpanthers.scouting.android.view.OpenCompetitionActivity" />
        </activity>
        <activity
            android:name=".view.ConnectToServerActivity"
            android:label="@string/title_activity_connect_to_server" />

        <service
            android:name=".io.match.MatchClientService"
            android:exported="false"></service>
    </application>

</manifest>