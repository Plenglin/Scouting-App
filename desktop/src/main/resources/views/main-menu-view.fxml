<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ironpanthers.scouting.desktop.controller.MainMenuController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <Label text="Iron Panthers Scouting System" alignment="CENTER"/>
    </top>
    <center>
        <VBox alignment="CENTER">
            <Button text="Open Local Client" onMouseClicked="#startLocalClient"/>
            <Button text="Connect via Bluetooth" onMouseClicked="#showBluetoothDialog"/>
            <Button text="Connect via TCP" onMouseClicked="#showTCPDialog"/>
            <Button text="Open Server" onMouseClicked="#showServerDialog"/>
        </VBox>
    </center>

</BorderPane>
