<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import com.ironpanthers.scouting.desktop.TimelineView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ironpanthers.scouting.desktop.ScoutingController"
            fx:id="root"
            onKeyPressed="#handleOnKeyPressed"
            prefHeight="720" prefWidth="1280">

    <GridPane>
        <ScrollPane fx:id="robotTimelinePane"
                    prefViewportWidth="1280"
                    prefViewportHeight="300"
                    GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3">

            <TimelineView fx:id="robotTimelineCanvas" width="1280" height="300"/>
        </ScrollPane>

        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Label text="Controls"/>
            <HBox>
                <Button fx:id="btnStart" onMouseClicked="#onBtnRecordPressed">
                    <graphic>
                        <ImageView>
                            <Image url="/play.png"/>
                        </ImageView>
                    </graphic>
                    <tooltip><Tooltip text="Start Recording"/> </tooltip>
                </Button>
                <Button fx:id="btnStop" onMouseClicked="#onBtnStopPressed">
                    <graphic>
                        <ImageView>
                            <Image url="/disconnect.png"/>
                        </ImageView>
                    </graphic>
                    <tooltip><Tooltip text="Robot Disconnected"/> </tooltip>
                </Button>
            </HBox>
        </VBox>

        <FlowPane fx:id="targetButtons"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <VBox GridPane.columnIndex="2" GridPane.rowIndex="1">
            <Label text="Endgame State"/>
            <VBox fx:id="endgameStates"/>
        </VBox>
    </GridPane>

</AnchorPane>
